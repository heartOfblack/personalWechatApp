/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
button{
width:50%;
}
.music
{
width: 60px;
height: 60px;
border-radius: 50%;
right: 10px;
position: absolute;
}
.play
{
  animation:rotating 10s linear infinite
}
@keyframes rotating{
from{transform:rotate(0)}
to{transform:rotate(360deg)}
}
.person
{
height: 150px;
}
.contentComponent
{
width: 100%;
height: auto;
}
.footer
{
  margin: 0;
  padding: 0;
width: 100%;
height: 40px;
position: absolute;
bottom: 0px;
text-align: center;

}
.footerul
{
   height: inherit; 
  width: inherit;
}
.li
{
